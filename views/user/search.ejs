<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="../js/color-modes.js"></script>
  <link rel="stylesheet" href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css" />
  <link rel="shortcut icon" href="../img/" type="image/x-icon">

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="" />
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors" />
  <meta name="generator" content="Hugo 0.112.5" />
  <title>Search page</title>

  <link href="../css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="../css/dark-light.css">
  <link href="../css/sidebars.css" rel="stylesheet" />
  <link rel="stylesheet" href="../css/myStyle.css" />
</head>

<body>
  <%- include('../Components/dark-light.ejs') %>

  <main class="d-flex flex-nowrap">
    <%- include('../Components/Sidebar.ejs', { currentPage: "search" }) %>

    <div class="b-example-divider b-example-vr"></div>

    <section class="w-100">
      <%- include('../Components/navbar.ejs') %>

      <div class="container mt-5">
        <h4 class="mb-4 text-center">Search Results</h4>

        <% if (arr && arr.length > 0) { %>
          <table class="table table-striped table-bordered text-center">
            <thead>
              <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Gender</th>
                <th>Country</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% arr.forEach((user, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= user.fireName %> <%= user.lastName %></td>
                  <td><%= user.gender %></td>
                  <td><%= user.country %></td>
                  <td>
                    <a data-bs-toggle="tooltip" data-bs-title="View details" data-bs-placement="top"
                      class="btn btn-primary btn-sm" href="/view/<%= user._id %>">
                      <i class="bi bi-eye"></i>
                    </a>
                    <a data-bs-toggle="tooltip" data-bs-title="Edit user" data-bs-placement="top"
                      class="btn btn-primary btn-sm" href="/edit/<%= user._id %>">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <form action="/edit/<%= user._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button data-bs-toggle="tooltip" data-bs-title="Delete user" data-bs-placement="top"
                        class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-center text-danger fw-bold">No results found.</p>
        <% } %>
      </div>
    </section>
  </main>

  <script src="../js/bootstrap.bundle.min.js"></script>
  <script src="../js/sidebars.js"></script>
  <script src="../js/main.js"></script>
</body>
</html>
